<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorTeal</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_black</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="checkBoxSplitGroup" parent="AppTheme">
        <item name="colorControlActivated">@color/color_purple</item>
        <item name="colorControlNormal">@color/color_purple</item>
    </style>

